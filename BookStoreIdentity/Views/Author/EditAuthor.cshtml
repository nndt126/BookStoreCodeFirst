@model Model.Class.Author

@{
    ViewBag.Title = "EditAuthor";
    Layout = "~/Views/Shared/_AdminLayOut.cshtml";
}

<div id="form_sample_3" class="form-horizontal">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDataAuthor" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Edit Education
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                        <a href="#portlet-config" data-toggle="modal" class="config">
                        </a>
                        <a href="#" class="reload">
                        </a>
                        <a href="javascript:;" class="remove">
                        </a>
                    </div>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AuthorName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @*@Html.EditorFor(model => model.Birthday, new { type = "date", @class = "datepicker form-control form-filter" })*@
                            @Html.TextBoxFor(model => model.Birthday, "{0:dd/MM/yyyy}", htmlAttributes: new { id = "datetimepicker1", @class = "datepicker form-control form-filter", @readonly = "readonly" })
                            @*@Html.TextBoxFor(model => model.Birthday, "{0:MM/dd/yyyy}", htmlAttributes : new { id = "datetimepicker1", @class = "datepicker form-control form-filter" })*@
                            @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AuthorImage, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.AuthorImage, new { id = "txtImg" })
                            @Html.ValidationMessageFor(model => model.AuthorImage, "", new { @class = "text-danger" })
                            <input type="file" id="UploadImg" /> <br />
                            <img id="imgPreview" class="img-responsive" height="150" width="150" src="@Url.Content("~/assets/HinhAnhAuthor/" + Model.AuthorImage)" /> <br />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsDeleted, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.CheckBoxFor(model => model.IsDeleted, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IsDeleted, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="button" class="btn btn-primary" id="submitbtn" onclick="UpdateData()" value="Update" />
                                <a class="btn default" href="@Url.Action("AdminGetAllAuthorsPaging","Author")">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>