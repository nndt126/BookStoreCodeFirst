@model List<Model.Class.Author>
@{
    ViewBag.Title = "GetAllAuthors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <a href="#"><img class="card-img-top" src="@Url.Content("~/assets/HinhAnhAuthor/" + @item.AuthorImage)" alt=""></a>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="#">@item.AuthorName</a>
                </h4>
                <p class="card-text">Birthday : @item.Birthday.Value.ToShortDateString()</p>
            </div>
        </div>
    </div>
}