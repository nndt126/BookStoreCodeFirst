    <![endif]-->
    <script src="~/Content/Login/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/Login/assets/global/plugins/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="~/Content/Login/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/Login/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/Content/Login/assets/global/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/Content/Login/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Content/Login/assets/global/plugins/backstretch/jquery.backstretch.min.js" type="text/javascript"></script>
    <script src="~/Content/Login/assets/global/plugins/select2/select2.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/Content/Login/assets/global/scripts/metronic.js"></script>
    <script src="~/Content/Login/assets/admin/layout/scripts/layout.js"></script>
    <script src="~/Content/Login/assets/admin/pages/scripts/login-soft.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Login.init();
            // init background slide images
            $.backstretch([
             "../Content/Login/assets/admin/pages/media/bg/1.jpg",
             "../Content/Login/assets/admin/pages/media/bg/2.jpg",
             "../Content/Login/assets/admin/pages/media/bg/3.jpg",
             "../Content/Login/assets/admin/pages/media/bg/4.jpg"
            ], {
                fade: 1000,
                duration: 8000
            }
         );
        });
    </script>

    <!-- END JAVASCRIPTS -->
</body>
